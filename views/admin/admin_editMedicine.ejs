<%- include('../partials/adminHeader') %>

  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
        Edit Drug
      </h1>
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="breadcrumb-item"><a href="#">Drug</a></li>
      </ol>
    </section>


	    <!-- Main content -->
    <section class="content">
     
     <!-- Basic Forms -->
      <div class="box box-default">
        <div class="box-header with-border">
          <h6 class="card-subtitle">Drug Informations</h6>

          <div class="box-tools pull-right">
            <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
            <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-remove"></i></button>
          </div>
        </div>
        <!-- /.box-header -->
        <div class="box-body">
          <div class="row">
            <div class="col">
            	<form novalidate="" action="/admin/edit-product/<%= product._id %>" method="POST" enctype="multipart/form-data"></form>

					<!-- <div class="form-group">
						<h5>Medicine Name <span class="text-danger">*</span></h5>
						<div class="controls">
							<input type="text" id="dname" name="dname" class="form-control" required="" data-validation-required-message="This field is required"> </div>
					</div>	 -->
                    <div class="form-group">
                        <h5>Medicine Name <span class="text-danger">*</span></h5>
                        <div class="controls">
                           <input type="text" id="dname" name="dname" class="form-control" required="" value="<%= product.dname %>" data-validation-required-message="This field is required">
                        </div>
                     </div>
					
                    <div class="form-group">
						<h5>Quantity <span class="text-danger">*</span></h5>
						<div class="controls">
							<input type="text" id="qty" name="qty" class="form-control" required=""  value="<%= product.qty %>" data-validation-required-message="This field is required"> </div>
					</div>	
					
					
                  
                    <div class="form-group">
						<h5> Manufactured date<span class="text-danger">*</span></h5>
						<div class="controls">
							<input type="date" id="mfd" name="mfd" class="form-control" required=""  value="<%= product.mfd %>" data-validation-required-message="This field is required"> </div>
					</div>

                 



					<div class="form-group">
						<h5>Expiry date<span class="text-danger">*</span></h5>
						<div class="controls">
							<input type="date" id="exd" name="exd" class="form-control" required=""  value="<%= product.exd %>" data-validation-required-message="This field is required"> </div>
					</div>

					<!-- <div class="form-group">
						<h5>Medicine code<span class="text-danger">*</span></h5>
						<div class="controls">
							<input type="text" name="mdc" class="form-control" required="" data-validation-required-message="This field is required"> </div>
					</div> -->

                    <div class="form-group">
						<h5>Medicine description<span class="text-danger">*</span></h5>
						<div class="controls">
							<input type="text" id="mdes" name="mdes" class="form-control" required=""  value="<%= product.mdes %>" data-validation-required-message="This field is required"> </div>
					</div>

                    
					
					<div class="form-group">
						<h5>Price<span class="text-danger">*</span></h5>
						<div class="controls">
							<input type="text" name="price" id="price" class="form-control" required=""  value="<%= product.price %>" placeholder="Enter your price">
						</div>
					</div>

				

					<div class="form-group">
						<h5>Medicine image<span class="text-danger">*</span></h5>
						<div class="controls">
							<input type="file" id="mimg" name="mimg" class="form-control"  value="<%= product.mimg %>" multiple> </div>
					</div>

					
						
					
					<div class="form-group">
                        
						<h5>Category <span class="text-danger">*</span></h5>
                        

						<select class="form-select" name="category" id="cars" required>
                            <% availCat.forEach(function(availCat,index) { %>
                            <option value="<%= availCat.CategoryName%>">
                              <%= availCat.CategoryName%>
                            </option>
                            <% }) %>
                          </select>
                          
                          
                          
                        
                          
					
</br>

					

					<div class="text-xs-right">
						<button type="submit" class="btn btn-info">Update</button>
					</div>
					
				</form>
            	
            </div>
            <!-- /.col -->
          </div>
          <!-- /.row -->
        </div>
        <!-- /.box-body -->
      </div>
      <!-- /.box -->
      
    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->
 
  <%- include('../partials/adminFooter') %>
